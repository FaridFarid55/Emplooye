@model EmployeesModel


<div class="row">
    <div class="column">
        <div class="card">
            <img src="~/Images/@Model.imgName" alt="John" style="width:100%; height:400px;`">
            <div class="container">
                <h2>@Model.Name</h2>
                <p class="title">@Model.Titel</p>
                <p>@Model.Description</p>
                <p>@Model.Email</p>
                <p><a asp-controller="@Model" asp-action="Details" asp-route-Id="@Model.Id" class="button">Contact</a></p>
            </div>
        </div>
    </div>
</div>
